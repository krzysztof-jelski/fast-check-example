{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*"
  ]
}
